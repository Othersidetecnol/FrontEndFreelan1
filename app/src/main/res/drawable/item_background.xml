<?xml version="1.0" encoding="utf-8"?>
<!-- Declaração do XML e codificação -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Declaração do namespace Android -->

    <item android:state_pressed="true">
        <!-- Define o estado do item quando pressionado -->
        <shape android:shape="rectangle">
            <!-- Define a forma do item como um retângulo -->
            <solid android:color="#D3D3D3" /> <!-- Cor de fundo mais escura ao clicar -->
            <corners android:radius="8dp" /> <!-- Bordas arredondadas com raio de 8dp -->
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Borda transparente -->
        </shape>
    </item>

    <item>
        <!-- Define o estado padrão do item -->
        <shape android:shape="rectangle">
            <!-- Define a forma do item como um retângulo -->
            <solid android:color="#FFFFFF" /> <!-- Cor de fundo bege -->
            <corners android:radius="8dp" /> <!-- Bordas arredondadas com raio de 8dp -->
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Borda transparente -->
        </shape>
    </item>

</selector>
